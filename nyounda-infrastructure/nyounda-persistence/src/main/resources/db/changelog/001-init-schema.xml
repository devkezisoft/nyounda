<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="000-ext" author="nyounda">
        <!-- gen_random_uuid() lives in pgcrypto -->
        <sql>CREATE
        EXTENSION IF NOT EXISTS pgcrypto;</sql>
    </changeSet>

    <changeSet id="001-app_user" author="nyounda">
        <createTable tableName="app_user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(255)"/>
            <column name="avatar_url" type="varchar(255)"/>
            <column name="email" type="varchar(255)"/>
            <column name="phone" type="varchar(50)"/>
            <column name="roles" type="text[]"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"/>
        </createTable>
        <addDefaultValue tableName="app_user" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <createIndex tableName="app_user" indexName="idx_user_email_unique" unique="true">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="app_user" indexName="idx_user_phone_unique" unique="true">
            <column name="phone"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-provider" author="nyounda">
        <createTable tableName="provider">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="full_name" type="varchar(255)"/>
            <column name="avatar_url" type="varchar(255)"/>
            <column name="average_rating" type="numeric(2,1)"/>
            <column name="number_of_reviews" type="int"/>
            <column name="location" type="varchar(500)"/>
            <column name="years_experience" type="int"/>
            <column name="jobs_done" type="int"/>
            <column name="response_time" type="varchar(255)"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"/>
        </createTable>
        <addDefaultValue tableName="provider" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <addForeignKeyConstraint baseTableName="provider" baseColumnNames="user_id"
                                 referencedTableName="app_user" referencedColumnNames="id"
                                 constraintName="fk_provider_user" onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="003-category" author="nyounda">
        <createTable tableName="category">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="emoji" type="varchar(8)"/>
            <column name="description" type="text"/>
            <column name="parent_id" type="uuid"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"/>
        </createTable>
        <addDefaultValue tableName="category" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <addForeignKeyConstraint baseTableName="category" baseColumnNames="parent_id"
                                 referencedTableName="category" referencedColumnNames="id"
                                 constraintName="fk_category_parent" onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="004-tag" author="nyounda">
        <createTable tableName="tag">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="varchar(64)"/>
            <column name="label" type="varchar(255)"/>
            <column name="status" type="varchar(20)"/>
        </createTable>
        <addDefaultValue tableName="tag" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <createIndex tableName="tag" indexName="uk_tag_key" unique="true">
            <column name="key"/>
        </createIndex>
    </changeSet>

    <changeSet id="006-review" author="nyounda">
        <createTable tableName="review">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid"/>
            <column name="rating" type="numeric(2,1)"/>
            <column name="comment" type="text"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"/>
        </createTable>
        <addDefaultValue tableName="review" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <addForeignKeyConstraint baseTableName="review" baseColumnNames="user_id"
                                 referencedTableName="app_user" referencedColumnNames="id"
                                 constraintName="fk_review_user" onDelete="SET NULL"/>
    </changeSet>


    <changeSet id="007-provider-skill" author="nyounda">
        <createTable tableName="provider_skill">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="provider_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="experience_years" type="int"/>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()"/>
        </createTable>
        <addDefaultValue tableName="provider_skill" columnName="id" defaultValueComputed="gen_random_uuid()"/>
        <addForeignKeyConstraint baseTableName="provider_skill" baseColumnNames="provider_id"
                                 referencedTableName="provider" referencedColumnNames="id"
                                 constraintName="fk_pskill_provider" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="provider_skill" baseColumnNames="category_id"
                                 referencedTableName="category" referencedColumnNames="id"
                                 constraintName="fk_pskill_category" onDelete="CASCADE"/>
        <addUniqueConstraint tableName="provider_skill" columnNames="provider_id, category_id"
                             constraintName="uk_pskill_provider_category"/>
    </changeSet>

    <changeSet id="008-seed-categories" author="nyounda" context="seed">
        <loadData tableName="category" separator="," file="db/data/categories.csv" encoding="UTF-8">
            <column name="id" type="uuid"/>
            <column name="name" type="string"/>
            <column name="emoji" type="string"/>
            <column name="description" type="string"/>
            <column name="parent_id" type="uuid"/>
        </loadData>
    </changeSet>

    <changeSet id="09-service-request" author="nyounda">
        <createTable tableName="service_request">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_sr_user"
                             referencedTableName="app_user" referencedColumnNames="id"/>
            </column>

            <column name="category_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_sr_category"
                             referencedTableName="category" referencedColumnNames="id"/>
            </column>

            <column name="subcategory_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_sr_subcategory"
                             referencedTableName="category" referencedColumnNames="id"/>
            </column>

            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="text"/>
            <column name="address" type="varchar(500)"/>

            <column name="status" type="varchar(40)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
    <changeSet id="10-image" author="nyounda">
        <createTable tableName="image">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="storage_key" type="text">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="url" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="mime_type" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="size_bytes" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="image" indexName="idx_image_storage_key">
            <column name="storage_key"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-request-image-join" author="kezisoft">
        <createTable tableName="request_image">
            <column name="request_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="image_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="request_image" columnNames="request_id,image_id" constraintName="pk_request_image"/>
        <addForeignKeyConstraint baseTableName="request_image"
                                 baseColumnNames="request_id"
                                 constraintName="fk_request_image_request"
                                 referencedTableName="service_request"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="request_image"
                                 baseColumnNames="image_id"
                                 constraintName="fk_request_image_image"
                                 referencedTableName="image"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="create-offer-table" author="nyounda">
        <createTable tableName="offer">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="request_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="mode" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <!-- Money record serialized as JSON -->
            <column name="amount" type="JSONB">
                <constraints nullable="false"/>
            </column>

            <!-- List<OfferExpense> serialized as JSON -->
            <column name="expenses" type="JSONB"/>

            <column name="message" type="TEXT"/>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- FKs -->
        <addForeignKeyConstraint
                baseTableName="offer"
                baseColumnNames="request_id"
                constraintName="fk_offer_request"
                referencedTableName="service_request"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="offer"
                baseColumnNames="user_id"
                constraintName="fk_offer_user"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="RESTRICT"/>

        <!-- Helpful indexes -->
        <createIndex tableName="offer" indexName="idx_offer_request">
            <column name="request_id"/>
        </createIndex>

        <createIndex tableName="offer" indexName="idx_offer_user">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="offer" indexName="idx_offer_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="offer" indexName="idx_offer_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>


</databaseChangeLog>
